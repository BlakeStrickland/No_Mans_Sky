<p id="notice"><%= notice %></p>


<h1>Listing Ship Upgrades for <%= @ship.name.capitalize %>:</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ship.ship_upgrades.each do |upgrade| %>
      <tr>
        <td><%= upgrade.name %></td>
        <td><%= upgrade.recipe %></td>
        <td><%= upgrade.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
<br />

<%= link_to 'Edit Ship', edit_ship_path(@ship) %> |
<%= link_to 'Back', ships_path %>
